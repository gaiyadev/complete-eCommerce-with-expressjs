<div class="container-fluid"><br/>
  {{> messages }}
<div class="span12">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
          <h5 class="title" id="title">Change Password</h5>
        </div>
        <br/>
        <div class="widget-content nopadding">
          {{!-- {{#with admin}} --}}
          <form action="admin/changePassword " method="post" class="form-horizontal">
            <div class="control-group">
              <label class="control-label">Current Password :</label>
              <div class="controls">
                <input type="password" class="span11" name="current_password" id="text" placeholder=" Current Password" />
              </div>
            </div>
          
            <div class="control-group">
              <label class="control-label">New Password</label>
              <div class="controls">
                <input type="password" name="new_password" class="span11"  id="text" placeholder="Enter New Password"  />
              </div>
            </div>
              <div class="control-group">
              <label class="control-label">Confirm New Password</label>
              <div class="controls">
                <input type="password" name="confirmed_newPassword" class="span11"  id="text" placeholder="Enter Password"  />
              </div>
            </div>
                    {{!-- {{/admin}} --}}
            <div class="form-actions">
              <button type="submit" id="btn" class="btn btn-success">Change</button>
            </div>
          </form>
        </div>
      </div>
    </div>
      
<style>
       #text, select {
	height: 44px;
	border: none;
	padding: 0 18px;
	background: #f0f0f0;
	border-radius: 10px;
	margin-bottom: 20px;
	font-size: 14px;
}
#title {
  font-size: 20px;
}
 #btn {
	width: 150px;
	border: none;
  height: 39px;
	padding: 0 18px;
	border-radius: 10px;
}
  </style>

      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>

 
<!--end-main-container-part-->

<!-- Contact section -->
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 contact-info">
                {{> messages }}
                <h3 class="text-danger">Reset Password Link</h3>
                <form action="/users/forgot" method="POST" class="contact-form">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <input type="email" autofocus required placeholder="Your e-mail" name="email">
                    <button type="submit" name="submit" class="site-btn">Recover</button>
                </form>
            </div>
            <div class="col-lg-2"></div>
        </div><br /><br />
    </div>
</section>
<div class="container-fluid"><br />
  <div class="span12">
    <div class="widget-box">
      {{> messages}}
      <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
        <h5 class="title" id="title">Profile infomation</h5>
      </div>
      <br />
      <div class="widget-content nopadding">
        {{#with user }}
        <form action="/users/update/{{_doc._id}}" method="post" class="form-horizontal">
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <div class="control-group">
            <label class="control-label">Surname :</label>
            <div class="controls">
              <input type="text" value=" {{_doc.Surname }} " class="span11" name="surname" id="text"
                placeholder="Surname" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Other Name</label>
            <div class="controls">
              <input type="text" class="span11" name="otherName" value=" {{_doc.OtherName }} " id="text"
                placeholder="Enter Name" />
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">LGA</label>
            <div class="controls">
              <input type="text" class="span11" name="lga" value=" {{_doc.LGA }} " id="text" placeholder="Enter LGA" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Username</label>
            <div class="controls">
              <input type="tel" value=" {{_doc.Username }} " class="span11" name="username" id="text"
                placeholder="Enter username" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Zip Code </label>
            <div class="controls">
              <input type="text" value=" {{_doc.Code }} " class="span11" name="code" id="text"
                placeholder="Enter Code" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">Mobile Number</label>
            <div class="controls">
              <input type="text" value=" {{_doc.Phone }} " class="span11" name="phone" id="text"
                placeholder="Enter Mobile" />
            </div>
          </div>
          <div class="control-group">
            <label class="control-label">State</label>
            <select required name="state">
              <option value="">::State</option>
              <option value="Kaduna">Kaduna</option>
              <option value="Katsina">Katsina</option>
              <option value="Enugu">Enugu</option>
              <option value="Gombe">Gombe</option>
              <option value="Imo">Imo</option>
              <option value="Kogi">Kogi</option>
              <option value="Kwara">Kwara</option>
              <option value="Lagos">Lagos</option>
              <option value="Kano">Kano</option>
              <option value="Jigawa">Jigawa</option>
              <option value="Nassarawa">Nassarawa</option>
              <option value="Plateau">Plateau</option>
              <option value="Kebbi">Kebbi</option>
              <option value="Akwa Ibom">Akwa Ibom</option>
              <option value="Anambra">Anambra</option>
              <option value="Bayelsa">Bayelsa</option>
              <option value="Benue">Benue</option>
              <option value="Cross River">Cross River</option>
              <option value="Delta">Delta</option>
              <option value="Ebonyi">Ebonyi</option>
              <option value="Edo">Edo</option>
              <option value="Ekiti">Ekiti</option>
              <option value="Yobe">Yobe</option>
              <option value="Adamawa">Adamawa</option>
              <option value="Niger">Niger</option>
              <option value="Sokoto">Sokoto</option>
              <option value="Taraba">Taraba</option>
              <option value="Borno">Borno</option>
              <option value="Bauchi">Bauchi</option>
              <option value="Zamfara">Zamfara</option>
              <option value="Ogun">Ogun</option>
              <option value="Ondo">Ondo</option>
              <option value="Osun">Osun</option>
              <option value="Oyo">Oyo</option>
              <option value="Rivers">Rivers</option>
              <option value="Taraba">Taraba</option>
              <option value="FCT">FCT</option>
            </select><br /><br />
          </div>
          <div class="control-group">
            <label class="control-label"> Address</label>
            <div class="controls">
              <textarea name="address" id="address" cols="30" rows="10"> {{_doc.Address }} </textarea> </div>
          </div>
          <div class="control-group">
            <label class="control-label">Billing Address</label>
            <div class="controls">
              <textarea name="billAddress" id="address" cols="30" rows="10"> {{_doc.BillingAddress }} </textarea>
            </div>
          </div>
          {{/with}}
          <div class="form-actions">
            <button type="submit" id="btn" class="btn btn-success">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>


</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>



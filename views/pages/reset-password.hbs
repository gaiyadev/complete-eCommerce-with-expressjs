<!-- Contact section -->
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 contact-info">
                {{> messages }}
                <h3 class="text-danger">Reset Password</h3>
                <form action="/users/reset/{{token}}" method="POST" class="contact-form">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <input type="password" autofocus required placeholder="Password" name="password">
                    <input type="password" required placeholder="Comfirm Password" name="Cpassword"><br /><br />
                    <button type="submit" name="submit" class="site-btn">Reset Password</button>
                </form>
            </div>
            <div class="col-lg-2"></div>
        </div><br /><br />
    </div>
</section>
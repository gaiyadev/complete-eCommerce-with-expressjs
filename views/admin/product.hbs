  <div class="container-fluid">
{{> messages }}

     <div class="row-fluid">
    <div class="span12">
      <div class="widget-box">
        <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
          <h5 class="title" id="title">Product infomation</h5>
        </div>
        <br/>
        <div class="widget-content nopadding">
          <form action="/access/product/add" method="post" enctype="multipart/form-data" class="form-horizontal">
            <div class="control-group">
              <label class="control-label">Product Name :</label>
              <div class="controls">
                <input type="text" class="span11" name="productName" id="text" placeholder="Product name" />
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="category">Product Category :</label>
              <div class="controls">
               <select  class="form-control span11" name="category" id="category" >
                 <option value="">Choose Category</option>
                   <option value="Men Fashion">Men Fashion</option>
                 <option value="Women Fashion">Women Fashion</option>
                   <option value="Shoes">Shoes</option>
                  <option value="Phones and  Tablets">Phones and  Tablets</option>
                 <option value="Jewlyries">  Jewlyries</option>
               </select>
              </div>
            </div>

               <div class="control-group">
              <label class="control-label">Price:</label>
              <div class="controls">
                <input type="text" class="span11" name="Price" id="text" placeholder="Product Price (1,200)" />
              </div>
            </div>
              <div class="control-group">
              <label class="control-label" for="category">Product Size:</label>
              <div class="controls">
               <select  class="form-control span11" name="size" id="size" >
                 <option value="M">Choose size</option>
                 <option value="M">M</option>
                 <option value="XL">XL</option>
                   <option value="XXL">XXL</option>
                  <option value="S">S</option>
                 <option value="XS"> XS</option>
               </select>
              </div>
            </div>
          
            <div class="control-group">
              <label class="control-label">SKU Number</label>
              <div class="controls">
                <input type="text" name="sku"  class="span11"  id="text" placeholder="Enter SKU (SKU001)"  />
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Product Brand :</label>
              <div class="controls">
                <input type="text" class="span11" name="brand" id="text" placeholder="Product brand" />
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Product Description:</label>
             <div class="controls">
              <textarea class="textarea_editor span11" name="Description" rows="6"  placeholder="Enter text ..."></textarea>
            </div>
            </div>

              <div class="control-group">
              <label class="control-label">Product Image :</label>
              <div class="controls">
                <input required type="file" accept="image/gif, image/jpeg, image/png" class="span11" name="product_image" id="file" onchange="loadFile(event)">
              </div>
            </div>
          <p><img id="output" width="200" /></p>

            <div class="form-actions">
              <button type="submit" id="btn" class="btn btn-success">Save</button>
            </div>
          </form>
        </div>
      </div>
   
      </div>
    </div>
  
  </div>
</div>
  </div>
</div>
<script>
var loadFile = function(event) {
	var image = document.getElementById('output');
	image.src = URL.createObjectURL(event.target.files[0]);
};

	$('.textarea_editor').wysihtml5();
</script>

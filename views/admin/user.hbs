 <!--Add Admin |Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add User</h4>
      </div>
      <div class="modal-body">
        <form action="/access/user/add" method="post" class="form-horizontal">
            <div class="control-group">
              <label class="control-label">First Name :</label>
              <div class="controls">
                <input type="text" id="text" minlength="4" required maxlength="50" class="" name="first_name" placeholder="First name" />
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Last Name :</label>
              <div class="controls">
                <input type="text" id="text" minlength="4" required maxlength="50" class="" name="last_name" placeholder="Last name" />
              </div>
            </div>
              <div class="control-group">
              <label class="control-label">Email</label>
              <div class="controls">
                <input type="email" id="text" minlength="4" maxlength="50" required name="user_email"  class="" placeholder="Enter Email"  />
              </div>
            </div>
             <div class="control-group">
              <label class="control-label">Username</label>
              <div class="controls">
                <input type="text" id="text" minlength="4" maxlength="50" required name="username"  class="" placeholder="Username"  />
              </div>
            </div>
             <div class="control-group">
              <label class="control-label" for="role">User Role</label>
              <div class="controls">
                <select name="user_role"  id="role" required>
                  <option value="Basic">Choose</option>
                  <option value="Basic">Basic</option>
                <option value="Administrator"> Administrator</option>
                  
                </select>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label" for="text">Password</label>
              <div class="controls">
                <input type="password" required minlength="8" maxlength="50" name="password" id="text" class="" placeholder="Enter Password"  />
              </div>
            </div>
              <div class="control-group">
              <label class="control-label">Confirm Password</label>
              <div class="controls">
                <input type="password" required minlength="8" maxlength="50" name="confirmed_password" id="text" class="" placeholder="Enter Password"  />
              </div>
            </div>
              <div class="form-actions">
              <button type="submit" name="save" class="btn btn-success">Save</button>
            </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
<!--end-main-container-part-->

 
